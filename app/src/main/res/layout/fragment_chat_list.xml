<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zweigbergk.speedswede.fragment.ChatFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:text="Block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/block_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/leta_kompis"
        android:id="@+id/match_button"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/addDummyMessage" />

    <Button
        android:text="Add dummy message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addDummyMessage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/block_button" />

</RelativeLayout>
